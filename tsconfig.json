{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": [ "es2016", "dom" ],
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}